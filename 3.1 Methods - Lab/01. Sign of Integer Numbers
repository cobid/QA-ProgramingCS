int num = int.Parse(Console .ReadLine());

SighNum(num);

static void SighNum(int num)
{
    if (num == 0)
    {
        Console.WriteLine("The number {0} is zero.", num);
    }
    else if (num > 0)
    {
        Console.WriteLine("The number {0} is positive.", num);
    }
    else
    {
        Console.WriteLine("The number {0} is negative.", num);
    }
}
